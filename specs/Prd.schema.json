{
  "$schema": "http://json-schema.org/draft/2020-12/schema",
  "title": "Product Requirements Document",
  "description": "Schema for PRDs consumed by APT multi-agent pipeline",
  "type": "object",
  "required": ["prd_id", "metadata", "product", "scope", "requirements", "dependencies", "environments", "approval_checklists", "budgets", "model_routing", "security"],
  "properties": {
    "prd_id": { "type": "string", "pattern": "^[a-z0-9\\-]+$" },
    "metadata": {
      "type": "object",
      "required": ["author", "created_at", "version"],
      "properties": {
        "author": { "type": "string" },
        "created_at": { "type": "string", "format": "date-time" },
        "version": { "type": "string" }
      }
    },
    "product": {
      "type": "object",
      "required": ["title", "summary", "personas", "jobs_to_be_done", "success_metrics"],
      "properties": {
        "title": { "type": "string" },
        "summary": { "type": "string" },
        "personas": { "type": "array", "items": { "type": "string" } },
        "jobs_to_be_done": { "type": "array", "items": { "type": "string" } },
        "success_metrics": { "type": "array", "items": { "type": "string" } }
      }
    },
    "scope": {
      "type": "object",
      "properties": {
        "in_scope": { "type": "array", "items": { "type": "string" } },
        "out_of_scope": { "type": "array", "items": { "type": "string" } }
      }
    },
    "requirements": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "description", "priority", "acceptance_criteria"],
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string", "enum": ["functional", "nonfunctional"] },
          "description": { "type": "string" },
          "priority": { "type": "string", "enum": ["P0", "P1", "P2", "P3"] },
          "acceptance_criteria": { "type": "array", "items": { "type": "string" } },
          "depends_on": { "type": "array", "items": { "type": "string" } }
        }
      }
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "kind", "status"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "kind": { "type": "string", "enum": ["library", "api", "secret", "infra", "data", "feature"] },
          "provider": { "type": "string" },
          "version": { "type": "string" },
          "provisioner_hint": { "type": "string" },
          "status": { "type": "string", "enum": ["available", "to_provision", "unknown"] }
        }
      }
    },
    "environments": {
      "type": "object",
      "properties": {
        "dev": { "type": "string" },
        "test": { "type": "string" },
        "stage": { "type": "string" },
        "prod": { "type": "string" }
      }
    },
    "approval_checklists": {
      "type": "object",
      "required": ["stage", "prod"],
      "properties": {
        "stage": {
          "type": "object",
          "properties": {
            "validation_steps": { "type": "array", "items": { "type": "string" } }
          }
        },
        "prod": {
          "type": "object",
          "properties": {
            "validation_steps": { "type": "array", "items": { "type": "string" } }
          }
        }
      }
    },
    "budgets": {
      "type": "object",
      "properties": {
        "task_defaults": {
          "type": "object",
          "properties": {
            "max_usd": { "type": "number", "minimum": 0 },
            "max_calls": { "type": "integer", "minimum": 1 }
          }
        },
        "escalation_policy": { "type": "string" }
      }
    },
    "model_routing": {
      "type": "object",
      "properties": {
        "implementor_default": { "type": "string" },
        "reviewer_default": { "type": "string" },
        "escalation_policy": { "type": "string" }
      }
    },
    "security": {
      "type": "object",
      "properties": {
        "data_classification": { "type": "string" },
        "pii": { "type": "string" },
        "secrets": { "type": "string" },
        "compliance_notes": { "type": "array", "items": { "type": "string" } }
      }
    },
    "observability": {
      "type": "object",
      "properties": {
        "logging_expectations": { "type": "array", "items": { "type": "string" } },
        "metrics": { "type": "array", "items": { "type": "string" } }
      }
    },
    "risks_mitigations": { "type": "array", "items": { "type": "string" } },
    "constraints": { "type": "array", "items": { "type": "string" } },
    "deliverables": { "type": "array", "items": { "type": "string" } },
    "context_pack": {
      "type": "object",
      "properties": {
        "enable": { "type": "boolean" },
        "scope": { "type": "string" },
        "notes": { "type": "string" }
      }
    }
  }
}
