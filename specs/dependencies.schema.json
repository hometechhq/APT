{
  "$schema": "http://json-schema.org/draft/2020-12/schema",
  "title": "Dependency Prep Artifact",
  "description": "Human-prep prerequisites (accounts, credentials, vendors, infra) that MUST exist before agent execution",
  "type": "object",
  "required": ["feature_id", "version", "created_at", "items"],
  "properties": {
    "feature_id": { "type": "string", "pattern": "^[a-z0-9][a-z0-9-]{1,63}$" },
    "version": { "type": "string" },
    "created_at": { "type": "string", "format": "date-time" },

    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "kind", "status"],
        "properties": {
          "id": { "type": "string", "pattern": "^[A-Za-z0-9._:-]{1,64}$" },
          "name": { "type": "string" },

          "kind": {
            "type": "string",
            "enum": ["library", "api", "secret", "infra", "data", "feature", "account", "contract", "license", "repo", "credential"]
          },

          "provider": { "type": "string", "description": "e.g., Azure, AWS, GitHub, Spoonacular, Stripe" },
          "service_tier": { "type": "string", "description": "e.g., Free, Pro, Enterprise" },
          "region": { "type": "string", "description": "If applicable (e.g., centralus, us-east-1)" },
          "version": { "type": "string" },

          "provisioner_hint": {
            "type": "string",
            "description": "How this should be provisioned: Terraform/Azure, GitHub App, n8n credential, manual purchase, etc."
          },

          "status": {
            "type": "string",
            "enum": ["to_provision", "in_progress", "available", "blocked", "unknown"]
          },

          "owner": {
            "type": "object",
            "required": ["name"],
            "properties": {
              "name": { "type": "string" },
              "contact": { "type": "string", "description": "email, Slack handle, or URL" }
            },
            "additionalProperties": false
          },

          "due_by": { "type": "string", "format": "date-time" },

          "cost": {
            "type": "object",
            "properties": {
              "one_time_usd": { "type": "number", "minimum": 0 },
              "monthly_usd": { "type": "number", "minimum": 0 },
              "notes": { "type": "string" }
            },
            "additionalProperties": false
          },

          "security": {
            "type": "object",
            "properties": {
              "secrets_location": { "type": "string", "description": "Where credentials will live (e.g., Key Vault secret name, n8n credential id)" },
              "scopes": { "type": "array", "items": { "type": "string" } },
              "oidc_required": { "type": "boolean" }
            },
            "additionalProperties": false
          },

          "evidence": {
            "type": "array",
            "description": "Proof that the dependency exists",
            "items": {
              "type": "object",
              "required": ["kind", "value"],
              "properties": {
                "kind": { "type": "string", "enum": ["url", "screenshot", "ticket", "arn", "resource_id", "note"] },
                "value": { "type": "string" }
              },
              "additionalProperties": false
            }
          },

          "approvals": {
            "type": "array",
            "description": "If a human/business approval is needed before purchase/enable",
            "items": {
              "type": "object",
              "required": ["by", "status"],
              "properties": {
                "by": { "type": "string" },
                "status": { "type": "string", "enum": ["requested", "granted", "denied"] },
                "notes": { "type": "string" }
              },
              "additionalProperties": false
            }
          },

          "notes": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
