{
  "$schema": "http://json-schema.org/draft/2020-12/schema",
  "title": "Data Flow Design Artifact",
  "description": "Schema for end-to-end request/data lifecycles, sequencing, classification, and observability hooks",
  "type": "object",
  "required": [
    "feature_id",
    "version",
    "created_at",
    "actors",
    "systems",
    "flows",
    "classification",
    "dependencies",
    "assumptions",
    "open_questions"
  ],
  "properties": {
    "feature_id": { "type": "string", "pattern": "^[a-z0-9][a-z0-9-]{1,63}$" },
    "version": { "type": "string" },
    "created_at": { "type": "string", "format": "date-time" },

    "actors": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "kind"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "kind": { "type": "string", "enum": ["human", "service", "job"] }
        },
        "additionalProperties": false
      }
    },

    "systems": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "type"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "type": {
            "type": "string",
            "enum": ["ui", "api", "worker", "db", "cache", "queue", "external_api", "cdn", "secrets", "other"]
          }
        },
        "additionalProperties": false
      }
    },

    "flows": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "title", "sla", "steps", "observability"],
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "sla": {
            "type": "object",
            "required": ["p95_latency_ms", "availability_pct"],
            "properties": {
              "p95_latency_ms": { "type": "integer", "minimum": 0 },
              "availability_pct": { "type": "number", "minimum": 0, "maximum": 100 }
            },
            "additionalProperties": false
          },
          "steps": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["from", "to", "mode", "operation", "payload_summary", "contains_pii", "correlation"],
              "properties": {
                "from": { "type": "string" },
                "to": { "type": "string" },
                "mode": { "type": "string", "enum": ["sync", "async", "batch"] },
                "operation": { "type": "string" },
                "payload_summary": { "type": "string" },
                "contains_pii": { "type": "boolean" },
                "correlation": {
                  "type": "object",
                  "required": ["traceparent", "idempotency_key"],
                  "properties": {
                    "traceparent": { "type": "boolean" },
                    "idempotency_key": { "type": ["string", "null"] }
                  },
                  "additionalProperties": false
                },
                "timeouts_ms": { "type": ["integer", "null"], "minimum": 0 },
                "retries": {
                  "type": "object",
                  "required": ["policy", "max_attempts"],
                  "properties": {
                    "policy": { "type": "string", "enum": ["none", "fixed", "expo"] },
                    "max_attempts": { "type": "integer", "minimum": 0 }
                  },
                  "additionalProperties": false
                },
                "dlq": { "type": ["string", "null"] }
              },
              "additionalProperties": false
            }
          },
          "observability": {
            "type": "object",
            "required": ["logs", "metrics", "traces", "synthetic_tests"],
            "properties": {
              "logs": { "type": "array", "items": { "type": "string" } },
              "metrics": { "type": "array", "items": { "type": "string" } },
              "traces": { "type": "array", "items": { "type": "string" } },
              "synthetic_tests": { "type": "array", "items": { "type": "string" } }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    },

    "classification": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["field", "class"],
        "properties": {
          "field": { "type": "string" },
          "class": { "type": "string", "enum": ["pii", "phi", "internal", "public"] },
          "notes": { "type": "string" }
        },
        "additionalProperties": false
      }
    },

    "dependencies": { "type": "array", "items": { "type": "string" } },
    "assumptions": { "type": "array", "items": { "type": "string" } },
    "open_questions": { "type": "array", "items": { "type": "string" } }
  },
  "additionalProperties": false
}
