{
  "$schema": "http://json-schema.org/draft/2020-12/schema",
  "title": "Backend Design Artifact",
  "description": "Schema for backend design decisions used by downstream automation",
  "type": "object",
  "required": [
    "feature_id",
    "version",
    "created_at",
    "entities",
    "apis",
    "processes",
    "storage",
    "scaling",
    "compliance",
    "observability",
    "dependencies",
    "assumptions",
    "open_questions"
  ],
  "properties": {
    "feature_id": { "type": "string", "pattern": "^[a-z0-9][a-z0-9-]{1,63}$" },
    "version": { "type": "string" },
    "created_at": { "type": "string", "format": "date-time" },

    "entities": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "fields", "relationships", "expected_growth"],
        "properties": {
          "name": { "type": "string" },
          "fields": { "type": "array", "items": { "type": "string" } },
          "relationships": { "type": "array", "items": { "type": "string" } },
          "expected_growth": { "type": "string" }
        },
        "additionalProperties": false
      }
    },

    "apis": {
      "type": "object",
      "required": ["internal", "external"],
      "properties": {
        "internal": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "methods", "payload_examples", "sla"],
            "properties": {
              "name": { "type": "string" },
              "methods": {
                "type": "array",
                "items": { "type": "string", "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"] }
              },
              "payload_examples": { "type": "object", "additionalProperties": true },
              "sla": { "type": "string" }
            },
            "additionalProperties": false
          }
        },
        "external": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["provider", "endpoint", "auth_method"],
            "properties": {
              "provider": { "type": "string" },
              "endpoint": { "type": "string" },
              "auth_method": { "type": "string", "enum": ["none", "api_key", "oauth2", "oidc", "sigv4", "other"] },
              "rate_limits": { "type": "string" },
              "sla": { "type": "string" }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },

    "processes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "type", "description", "sla"],
        "properties": {
          "name": { "type": "string" },
          "type": { "type": "string", "enum": ["sync", "async", "batch"] },
          "description": { "type": "string" },
          "sla": { "type": "string" }
        },
        "additionalProperties": false
      }
    },

    "storage": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["kind", "technology"],
        "properties": {
          "kind": { "type": "string", "enum": ["sql", "nosql", "blob", "cache", "search", "queue"] },
          "technology": { "type": "string" },
          "notes": { "type": "string" }
        },
        "additionalProperties": false
      }
    },

    "scaling": {
      "type": "object",
      "required": ["strategy"],
      "properties": {
        "strategy": { "type": "string" },
        "notes": { "type": "string" }
      },
      "additionalProperties": false
    },

    "compliance": {
      "type": "object",
      "required": ["logging", "audit", "residency"],
      "properties": {
        "logging": { "type": "string" },
        "audit": { "type": "string" },
        "residency": { "type": "string" },
        "notes": { "type": "string" }
      },
      "additionalProperties": false
    },

    "observability": {
      "type": "object",
      "required": ["metrics", "health_checks"],
      "properties": {
        "metrics": { "type": "array", "items": { "type": "string" } },
        "health_checks": { "type": "array", "items": { "type": "string" } },
        "traces": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": false
    },

    "dependencies": { "type": "array", "items": { "type": "string" } },
    "assumptions": { "type": "array", "items": { "type": "string" } },
    "open_questions": { "type": "array", "items": { "type": "string" } }
  },
  "additionalProperties": false
}
